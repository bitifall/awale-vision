{#
/**
 * @file
 * Default theme implementation for a 'form' element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}
{{ attach_library('awale/form') }}
{% if element['#form_id'] == 'search_block_form' %}

  <form Class="form-inline mt-2 mt-md-0" action="{{element['#action']}}" method="get" id="search-block-form" accept-charset="UTF-8" data-drupal-form-fields="edit-keys">
  
      <input class="form-control mr-sm-2" title="Enter the terms you wish to search for." data-drupal-selector="edit-keys" type="text" id="edit-keys" name="keys" value="" size="15" maxlength="128"  placeholder="Recherche...">
      </input>

      <button class="btn btn-main my-2 my-sm-0" data-drupal-selector="edit-submit" type="submit">
        <svg class="svg-inline--fa fa-search fa-w-16" aria-hidden="true" data-prefix="fas" data-icon="search" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg="">
          <path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z">

          </path>
        </svg><!-- <i class="fas fa-search"></i> -->
      </button>
    

   {#  <span class="input-group-btn">
        <input data-drupal-selector="edit-submit" type="submit" id="edit-submit" value="Search" class="btn btn-default js-form-submit submit-button">
        </input>
      </span>
  #}
  </form>
{% else %}

  <form{{ attributes }}>
    {{ children }}
  </form>

{% endif %}


